<title>Hero Sheet: Espíritus Guardianes</title>
<%= erb :menu %>
<br><h1>Espíritus Guardianes</h1>

<table id='table-2'>
	<thead>
		<tr><th>Icono</th>
			<th>Nombre</th>
			<th>Cuerpo</th>
			<th>Ataque</th>
			<th>Defensa</th>
			<th>Movimiento</th>
			<th>Nivel</th>
			<th>Especial</th>
			<th>Unión espiritual</th>
			<th>Sabiduría espiritual</th>
			<th>Transformación druídica</th>
		</tr>	
	</thead>
	<tbody>
		<% guardians.each do |g| %>
			<tr>
				<td>
					<% img_path = "'../images/criaturas/guardianes/#{ g[:nombre] }.png'" %>
					<img src=<%=img_path%> alt=<%= g[:nombre] %>, id='icon3' />
				</td>
				<% g.keys.each do |att| %>
					<% if att != :id %>
						<td><%= g[att] %></td>
					<% end %>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>
