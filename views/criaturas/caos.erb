<title>Hero Sheet: Caos</title>
<%= erb :menu %>
<br><h1>Caos</h1>

<table id='table-2'>
	<thead>
		<tr><th>Icono</th>
			<th>Nombre</th>
			<th>Ataque</th>
			<th>Defensa</th>
			<th>Movimiento</th>
			<th>Mente</th>
			<th>Cuerpo</th>
			<th>Especial</th>
		</tr>	
	</thead>
	<tbody>
		<% caoticos.each do |pv| %>
			<tr>
				<td>
					<% img_path = "'../images/criaturas/caos/#{pv[:nombre]}.png'" %>
					<img src=<%=img_path%> alt='icono', id='icon' />
				</td>
				<% pv.keys.each do |att| %>
					<% if att != :id %>
						<td><%= pv[att] %></td>
					<% end %>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>
