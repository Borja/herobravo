					<% if a = @heroe.anillos[1] %>
						<%= erb :'display/item', :locals => {:item => a } %></td>
					<% else %>
						<%= erb :'display/ranura' %>
					<% end %>
				</td>
			</th>
		</tr>
	</thead>
</table>