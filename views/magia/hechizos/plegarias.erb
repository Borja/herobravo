<% magias = send(params[:view]) %>
<% magias.each do |s|%>
	<% if params[:param].to_i == s.nivel %>
		<% magic = s %>
		<tr style=<%= s.color %>>
			<td><%= erb :'display/spell', locals: { spell: magic } %></td>
			<td><%= s.name.capitalize %></td>
			<td><%= s.efecto %></td>
			<td><%= s.summun %></td>
			<td><%= s.chakra %></td>
		</tr>
	<% end %>
<% end %>