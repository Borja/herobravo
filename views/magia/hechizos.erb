<!DOCTYPE HTML>
<html>
	<head>
		<%= erb :head, :locals => {:title => "HeroSheet: hechizos"} %>
		<link rel="stylesheet" href="../../css/bravo.css" />
	</head>
	<body class="subpage">
		<div id="header-wrapper">
			<%= erb :header, :locals => { :title => "Hechizos" } %>
		</div>
		<!-- Content -->
			<div id="content-wrapper">
				<div id="content">
					<div class="container">
						<div class="row">
							<div class="12u">
								<section>
									<header>
										<% title = "Hechizos #{ @elemento ? "de #{@elemento}" : "elementales" } de nivel #{@spelllevel || 1}" %>
										<h2><%= title %></h2>
									</header>									
									<table id='tresp'>
										<thead>
											<th>Icono</th>
											<% unless @elemento %><th>Elemento</th><% end %>
											<th>Nombre</th>
											<th>Descripción</th>
											<% if @spelllevel == 1 %>
												<th><%= @elemento == "luz" ? "Summun" : "Diablura" %></th>
												<% unless ["sombra","sangre"].include?(@elemento) %>
													<th><%= @elemento == "luz" ? "Chakra" : "Ardid" %></th>
													<th>Maestría</th>
												<% end %>
											<% end %>
											<th>Potencia</th>
										</thead>
										<tbody>
									 		<% case @elemento  
									 		   when "sombra" %><%= erb :'magia/hechizos/sombra' %>
									 		<% when "sangre" %><%= erb :'magia/hechizos/sangre' %>
									 		<% when "luz"    %><%= erb :'magia/hechizos/plegarias' %>
									 		<% else %>		   <%= erb :'magia/hechizos/elemental' %>
									 		<% end %>	
										</tbody>
									</table><br>
							
								</section>                           
							</div>
						</div>
					</div>
				</div>
			</div>
		<%= erb :'footer/footer' %>	
	</body>
</html>