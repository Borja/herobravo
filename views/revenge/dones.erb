<table>
	<thead>
		<tr>
			<% rclases.keys.each do |pj| %>
				<th><%= pj.capitalize %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<tr>
			<% rclases.keys.each do |clase| %>
				<td>
					<a href='/personaje/<%= clase %>'>
						<img src="images/revenge/personajes/<%= clase %>.png"
							alt="<%= clase %>"
							id='icon2' />
					</a>
				</td>
			<% end %>
		</tr>
		<% 5.times do |i| %>
			<tr>
				<% rclases.values.each do |clase| %>
					<td>
						<% h = clase[i] %>
						<a href="/don/<%= h %>">
							<%= h %><br/>
							<img src="/images/clases/<%= h %>.png"
									 alt="<%= h %>"
									 id='icon4' />
						</a>
					</td>
				<% end %>
			</tr>	
		<% end %>
	</tbody>
</table>