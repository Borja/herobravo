<table>
	<thead>
		<tr>
			<% clases.keys.each do |pj| %>
				<th><%= pj.capitalize %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<tr>
			<% clases.keys.each do |clase| %>
				<td>
					<a href='/personaje/<%= clase %>'>
						<img src="images/personajes/<%= clase %>.png"
							alt="<%= clase %>" 
							id='icon2' />
					</a>
				</td>
			<% end %>
		</tr>
		<% 3.times do |i| %>
			<tr>
				<% clases.values.each do |clase| %>
					<td>
						<% h = clase[i] %>
						<a href="/habilidad/<%= h %>">
						<%= h %><br>
						<img src="/images/clases/<%= h %>.png" alt=<%= h %> /, id='icon4'></a>
					</td>
				<% end %>
			</tr>	
		<% end %>
	</tbody>
</table>