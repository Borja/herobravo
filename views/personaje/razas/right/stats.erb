<header>
	<h2>Estadísticas</h2>
</header>
<h3>Iniciales de cada raza</h3>
<table id='tresp'>
	<thead>
		<tr>
			<th>Raza</th>
			<th>PC</th>
			<th>PM</th>
			<th>Mov</th>
		</tr>
	</thead>
	<tbody>
		<% razas.each do |raza| %>
			<tr>
				<td><%= raza.first %></td>					
				<td><%= raza.last[0] %></td>
				<td><%= raza.last[1] %></td>
				<td><%= raza.last[2] %></td>
			</tr>
		<% end %> 
	</tbody>
</table>
