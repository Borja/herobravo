<title>HeroSheet: Lista de Jugadores</title>
<%= erb :menu %><br>
<h1>Jugadores</h1>

<table id='table-2'>
	<thead>
		<tr>
			<th>Jugador</th>
			<th>Personajes</th>
		</tr>
	</thead>
	<tbody>
		<% jugadores.each do |j| %>
		<tr>
			<td><%= j %></td>
			<td>
				<table id='table-2'>
					<tbody>
						<tr>
							<% heros.each do |hero| %>
								<% if hero.jugador == j %>
									<td><%= erb :'display/portrait', :locals => { :h => hero } %>
										<%= hero.nivel %></td>
								<% end %>
							<% end %>
						</tr>
					</tbody>
				</table>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>